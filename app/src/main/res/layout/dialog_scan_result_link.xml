<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#2CC6C6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <LinearLayout
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <LinearLayout
                android:layout_weight="1.3"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_weight="1.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ScrollView
                        android:id="@+id/SCROLLER_ID_search"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <TextView
                            android:id="@+id/result_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Link"
                            android:drawableLeft="@drawable/icon_link"
                            android:textSize="20dp"
                            android:focusable="true" />
                    </ScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/copy_Link_text"
                        android:src="@drawable/icon_copy_text"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/search"
                    android:text="@string/fragment_scanner_search_google"
                    android:backgroundTint="#20AAAA"
                    android:fontFamily="serif"
                    android:textSize="16dp"
                    android:drawableLeft="@drawable/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/cancel_result_link"
                    android:text="Cancel"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#20AAAA"
                    android:fontFamily="serif"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
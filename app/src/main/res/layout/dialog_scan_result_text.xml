<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#2CC6C6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.4">
                <TextView
                    android:id="@+id/txtTitleScanResult"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="@string/fragment_scanner_text_found"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_weight="1.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ScrollView
                        android:padding="10dp"

                        android:id="@+id/SCROLLER_ID_search"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <TextView
                            android:id="@+id/txtResult_text"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Result"
                            android:drawableLeft="@drawable/icon_result"
                            android:textSize="14dp"
                            android:focusable="true" />
                    </ScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgCopyText"
                        android:padding="10dp"
                        android:src="@drawable/icon_copy_text"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llAds"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.7"
                android:orientation="vertical">
                <com.startapp.sdk.ads.banner.banner3d.Banner3D
                    android:id="@+id/bannerScanText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.4"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnSearchText"
                    android:text="@string/fragment_scanner_search_google"
                    android:backgroundTint="#20AAAA"
                    android:fontFamily="serif"
                    android:textSize="10dp"
                    android:drawableLeft="@drawable/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btnCancel_result_text"
                    android:text="Cancel"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#20AAAA"
                    android:fontFamily="serif"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>